<div class="static_page">
   
    <section class="banner-sec">
            <div class="container">
                 <h3 class="heading-large"><em>Review</em></h3>
                 <hr style="height:2px;border:none;color:#333;background-color:#333;" />
        <div class="row">
            <div class="col-md-3">
                <% i =0 %>
            <% @hot_reviews.each do |review| -%>
                <% if i <2 %>
                        <div class="card"> 
                            <%= image_tag(review.restaurant.photo, class: "img-fluid", style: "max-height: 150px") %>
                            <div class="card-img-overlay"> <span class="badge badge-pill badge-danger">Hot</span> </div>
                            <div class="card-body">
                                <div class="news-title">
                                    <h2 class=" title-small"><a href="<%= review_path(review) %>"><b><%= review.title %></b></a></h2>
                                </div>
                                <% if review.score.times !=nil %>
  			  						  <% review.score.times do %>
  			  							<span class="fa fa-star checked", style="font-size: 0.8em"></span>
  			  							<% end %>
  			  							<% (5-review.score).times do %>
  			  							<span class="fa fa-star", style="font-size: 0.8em"></span>
  			  							<% end %>
  			  						<% else %>
  			  						  <span class="fa fa-star", style="font-size: 0.8em"></span>
  			  						  <span class="fa fa-star"></span>
  			  						  <span class="fa fa-star"></span>
  			  						  <span class="fa fa-star"></span>
  			  						  <span class="fa fa-star"></span>
  			  						<% end %>
                                <p class="card-text"><small class="text-time"><em>Written by: <%= review.user.name %></em></small></p>
                                <p class="card-text", style="color: #969393"><small><em><%= review.created_at %></em></small></p>
                            </div>
                        </div>
                <% end -%>
                <% i+=1 %>
          <% end -%>
          </div>
